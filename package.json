{
  "name": "hyperd",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@martel/hyperapp-fx": "^2.0.0-beta.4",
    "hyperapp": "^2.0.4",
    "hyperapp-page-router": "^0.1.1"
  },
  "devDependencies": {
    "@martel/hyperapp-scripts": "^0.5.2"
  },
  "scripts": {
    "start": "hyperapp-scripts start",
    "build": "hyperapp-scripts build",
    "test": "hyperapp-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^h$"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
